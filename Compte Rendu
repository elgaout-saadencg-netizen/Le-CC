        const rocPoints = [];
        for (let i = 0; i <= 100; i++) {
            const x = i / 100;
            const y = Math.pow(x, 0.4);
            rocPoints.push({x: x, y: y});
        }
        
        new Chart(rocCtx, {
            type: 'line',
            data: {
                datasets: [
                    {
                        label: 'Random Forest (AUC = 0.89)',
